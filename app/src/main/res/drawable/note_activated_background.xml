<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLight" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/colorNoteBorder" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLight" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/colorNoteBorder" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/colorPrimaryLightest" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/colorNoteBorder" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/colorNote" />
            <corners android:radius="10dp" />
            <stroke android:width="1dp" android:color="@color/colorNoteBorder" />
        </shape>
    </item>
</selector>