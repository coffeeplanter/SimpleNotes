<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/zero_dp"
    android:paddingLeft="@dimen/zero_dp"
    android:paddingStart="@dimen/zero_dp"
    android:paddingRight="@dimen/zero_dp"
    android:paddingEnd="@dimen/zero_dp"
    android:paddingTop="@dimen/zero_dp"
    android:background="@color/colorBackground"
    tools:context="ru.solovyov.ilya.simplenotes.MainActivity">

    <LinearLayout
        android:id="@+id/main_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/buttons_top_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_by_text_button"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_marginEnd="@dimen/buttons_margin"
            android:layout_marginLeft="@dimen/buttons_margin"
            android:layout_marginStart="@dimen/buttons_margin"
            android:layout_marginTop="@dimen/buttons_top_margin"
            android:layout_weight="1"
            android:text="@string/add_by_text_button"
            android:background="@drawable/button_background"/>

        <ToggleButton
            android:id="@+id/add_by_voice_button"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/buttons_margin"
            android:layout_marginEnd="@dimen/buttons_margin"
            android:layout_marginTop="@dimen/buttons_top_margin"
            android:layout_weight="1"
            android:textOff="@string/add_by_voice_button"
            android:textOn="@string/stop_voice_button"
            android:background="@drawable/button_background"/>

    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_linearlayout"
        android:padding="0dp"
        android:layout_marginLeft="@dimen/listview_margin"
        android:layout_marginStart="@dimen/listview_margin"
        android:layout_marginRight="@dimen/listview_margin"
        android:layout_marginEnd="@dimen/listview_margin"
        android:layout_marginTop="@dimen/listview_top_margin"
        android:layout_marginBottom="@dimen/listview_bottom_margin"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/listview_divider_height"/>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:visibility="invisible"
        android:background="@color/colorPrimaryLightest"
        style="?android:attr/progressBarStyleLarge"
        android:layout_above="@id/main_linearlayout"/>


</RelativeLayout>
